<!DOCTYPE html>
<html lang="en">

    <%- include('../partials/head') %>

<body class="register">
    
    <%- include('../partials/header') %>

        <main id="pd_main-container">
            <section id="pd_main-producto_">
                <div class="container">
                    <br>
                    <div class="pd_tit-categoria p40">Alta de producto</div>
                    
                    <div class="pd_producto-img">
                        <div class="pd_prod-left">
                            <form action="/product/store" method="POST" enctype="multipart/form-data">
                                <div class="fr_nombre">
                                    <label class="fr_lbltexto"> Categoria </label>
                                    
                                    <select name="category" class="control <%= locals.errors && errors.category ? 'is-invalid' : null %>">
                                        <option value="">Elegí una categoria</option>
                                        <%  
                                       let category = ['Hombre', 'Mujer', 'Niño'];
                                        %>
                                           <% for (const oneCategory of category) { %>
                                            <option 
                                            value="<%= oneCategory %>"
                                        <%= locals.oldData && (oneCategory === oldData.category) ? 'selected' : null %> 
                                        > <%= oneCategory %> </option>
                                        <% } %>
                                  </select>
                                    <% if (locals.errors && errors.category) { %>
                                        <div class="is-invalid"> <%= errors.category.msg %></div>
                                        <% } %>

                                    
                                </div>
                                <div class="fr_nombre">
                                    <label class="fr_lbltexto">Nombre</label>
                                    <input type="text" name="name" id="name" value="<%= locals.oldData ? oldData.name : null %>" class="control <%= locals.errors && errors.name ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.name) { %>
                                        <div class="is-invalid"> <%= errors.name.msg %></div>
                                        <% } %>
                                </div>
                                <div class="fr_email">
                                    <label class="fr_lbltexto"> Descripción </label>
                                    <input type="textarea" name="description" id="descripcion" value="<%= locals.oldData ? oldData.descripcion : null %>" class="control <%= locals.errors && errors.description ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.description) { %>
                                        <div class="is-invalid"> <%= errors.description.msg %></div>
                                        <% } %>
                                </div>
                                <div class="fr_email">
                                    <label class="fr_lbltexto"> Descripción ampliada</label>
                                    <textarea name="extended" class="control <%= locals.errors && errors.extended ? 'is-invalid' : null %>"><%= locals.oldData ? oldData.extended : null %></textarea>
                                    <% if (locals.errors && errors.extended) { %>
                                        <div class="is-invalid"> <%= errors.extended.msg %></div>
                                        <% } %>
                                </div>
                                <label class="fr_lbltexto"> Color </label>
                                <div class="fr_email check-talles">
                                    
                                    <input type="checkbox" name="color" value="Azul" id="Azul" >
                            <label for="Azul"> Azul </label> 
                            <input type="checkbox" name="color" value="Blanco" id="Blanco">
                            <label for="Blanco"> Blanco</label>
                            <input type="checkbox" name="color" value="Negro" id="Negro">
                            <label for="Negro"> Negro </label> 
                            <input type="checkbox" name="color" value="Rojo" id="Rojo">
                            <label for="Rojo"> Rojo </label>  
                                </div>
                                <label class="fr_lbltexto"> Talles </label>
                                <div class="fr_email check-talles">
                                    <input type="checkbox" name="talle" value="S" id="S">
                                <label for="S">S</label>
                                <input type="checkbox" name="talle" value="M" id="M">
                                <label for="M">M</label>
                                <input type="checkbox" name="talle" value="L" id="L">
                                <label for="L">L</label>
                                <input type="checkbox" name="talle" value="XL" id="XL">
                                <label for="XL">XL</label>
                                </div>
                                <div class="fr_email">
                                    <label class="fr_lbltexto"> Precio </label>
                                    <input type="text" name="price" id="price" value="<%= locals.oldData ? oldData.price : null %>" class="control <%= locals.errors && errors.price ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.price) { %>
                                        <div class="is-invalid"> <%= errors.price.msg %></div>
                                        <% } %>
                                </div>
                                <div class="fr_email">
                                    <label class="fr_lbltexto"> Imagen de producto </label>
                                    <input type="file" name="image" id="image"  accept=".jpg, .png" class="control <%= locals.errors && errors.image ? 'is-invalid' : null %>">
                                    <% if (locals.errors && errors.image) { %>
                                        <div class="is-invalid">
                                            <%= errors.image.msg %>
                                        </div>
                                    <% } %>
                                </div>
                                <!--</div>-->
                                <br>
                                <div class="fr_registro">
                                    <div class="fr_registro-left">
                                        <button type="submit" class="pd_gl-cta pd_gl-cta--primary">
                                            <span class="pd_gl-cta__content">
                                                Crear
                                            </span>
                                        </button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </section>

            <section id="pd_detalle"></section>

            <%- include('../partials/newsletter') %>

            <%- include('../partials/prefooter') %>
        </main>

        <%- include('../partials/footer') %>

            <!-- Bootstrap Bundle with Popper -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
                crossorigin="anonymous"></script>

</body>

</html>